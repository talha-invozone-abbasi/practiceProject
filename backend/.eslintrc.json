{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node":true
  },
  "extends": "eslint:recommended",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest"
  },

  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "comma-dangle": ["off", "always-multiline"],
    
    "semi": "off",
    "no-var": "error",
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
    "no-process-exit": "off",
    "no-console": "error",
    "spaced-comment": ["error", "always"],
    "prefer-const": "error",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ]
  }
}
